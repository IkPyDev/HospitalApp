<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:text="Bemor FISH:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        tools:text="Ikrombek"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/name_title"
        app:layout_constraintTop_toTopOf="@id/name_title"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_title"
        app:layout_constraintTop_toBottomOf="@id/name_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:text="Vaqti :"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        tools:text="20:20"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/date_title"
        app:layout_constraintTop_toTopOf="@id/date_title"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doctor_title"
        app:layout_constraintTop_toBottomOf="@id/date_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:text="Doctor FISH:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doctor"
        tools:text="Murodbek"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/doctor_title"
        app:layout_constraintTop_toTopOf="@id/doctor_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>